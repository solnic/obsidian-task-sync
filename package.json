{
  "name": "obsidian-task-sync",
  "version": "1.0.0",
  "description": "Sync tasks between Obsidian and external systems with project/area organization",
  "main": "src/main.ts",
  "scripts": {
    "dev": "npm run build:css && node esbuild.config.mjs",
    "build": "npm run build:css && tsc -noEmit -skipLibCheck && node esbuild.config.mjs production",
    "build:css": "postcss src/styles/main.css -o styles.css",
    "build:css:watch": "postcss src/styles/main.css -o styles.css --watch",
    "test": "npm run test:unit && npm run test:e2e:headless",
    "test:unit": "vitest run",
    "test:ci": "vitest run",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "test:ui": "vitest --ui",
    "test:build": "npm test && npm run build",
    "test:e2e": "npx vitest run --config vitest.playwright.config.mjs --reporter=verbose --reporter=json --outputFile=e2e-test-results.json",
    "test:e2e:headless": "xvfb-run -a --server-args=\"-screen 0 1920x1080x24 -ac -nolisten tcp -dpi 96\" npx vitest run --config vitest.playwright.config.mjs --reporter=verbose --reporter=json --outputFile=e2e-test-results.json",
    "test:e2e:windowed": "E2E_HEADLESS=false npx vitest run --config vitest.playwright.config.mjs",
    "test:e2e:ci": "CI=true npx vitest run --config vitest.playwright.config.mjs --reporter=verbose",
    "test:e2e:failed": "node scripts/rerun-failed-e2e.js",
    "test:e2e:failed:headless": "node scripts/rerun-failed-e2e.js --headless",
    "test:e2e:changed": "npx vitest run --config vitest.playwright.config.mjs --changed --reporter=verbose --reporter=json --outputFile=e2e-test-results.json",
    "test:e2e:changed:headless": "xvfb-run -a --server-args=\"-screen 0 1920x1080x24 -ac -nolisten tcp -dpi 96\" npx vitest run --config vitest.playwright.config.mjs --changed --reporter=verbose --reporter=json --outputFile=e2e-test-results.json",
    "setup:obsidian-playwright": "bash scripts/setup-obsidian-playwright.sh",
    "setup:headless": "bash scripts/setup-headless-testing.sh",
    "test:headless-detection": "node scripts/test-headless-detection.js",
    "test:xvfb": "node scripts/test-xvfb-electron.js",
    "validate:headless": "node scripts/validate-headless-setup.js",
    "dev:obsidian:open_test_vault": "bash scripts/dev-obsidian-open-test-vault.sh",
    "dev:obsidian:install": "bash scripts/dev-obsidian-install.sh",
    "version": "node version-bump.mjs && git add manifest.json versions.json"
  },
  "keywords": [
    "obsidian",
    "plugin",
    "task",
    "sync",
    "productivity"
  ],
  "author": "Peter Solnica",
  "license": "MIT",
  "devDependencies": {
    "@electron/asar": "^4.0.1",
    "@playwright/test": "^1.48.0",
    "@sveltejs/vite-plugin-svelte": "^6.1.4",
    "@types/node": "^24.3.1",
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.40.0",
    "@vitest/ui": "^3.2.4",
    "builtin-modules": "^5.0.0",
    "chai": "^5.2.1",
    "dotenv": "^17.2.2",
    "electron": "^37.5.1",
    "esbuild": "^0.25.9",
    "esbuild-svelte": "^0.9.3",
    "jsdom": "^26.0.0",
    "obsidian": "latest",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "postcss-import": "^16.1.1",
    "svelte": "^5.38.7",
    "ts-node": "^10.9.2",
    "tslib": "^2.8.1",
    "typescript": "^5.9.2",
    "vite": "^7.1.3",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@octokit/rest": "^22.0.0",
    "@types/js-yaml": "^4.0.9",
    "@types/moment": "^2.11.29",
    "fast-deep-equal": "^3.1.3",
    "ical.js": "^2.2.1",
    "inflection": "^3.0.2",
    "js-yaml": "^4.1.0",
    "moment": "^2.30.1",
    "node-osascript": "^2.1.0",
    "superjson": "^2.2.2",
    "temporal-polyfill": "^0.3.0",
    "ulid": "^3.0.1",
    "zod": "^4.1.8"
  }
}
